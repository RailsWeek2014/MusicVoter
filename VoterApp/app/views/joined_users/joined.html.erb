
<h2>Join Playlist</h2>
<%= form_tag(playlists_list_tracks_path) do %>
    <%= label_tag(:code, "Playlist-Code:") %>
    <%= text_field_tag(:code) %>
    <%= submit_tag("Enter") %>
<% end %>
<h2>Joined playlists</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @playlists.each do |p| %>
      <tr>
        <td><%= p.title %></td>
        <td><%= p.description %></td>
        <td>
          <%= link_to "Join", list_tracks_path(p.id) %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

